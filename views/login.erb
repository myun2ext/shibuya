<h2>Login</h2>

<form class="form-signin" action="/login" method="post">
  <div class="control-group">
    <label class="control-label" for="email">Name</label>
    <div class="controls">
      <input type="text" name="name" class="input-block-level input-xlarge" placeholder="Email address">
    </div>
  </div>

  <div class="control-group">
    <label class="control-label" for="email">Password (not working)</label>
    <div class="controls">
      <input type="password" name="password" class="input-block-level input-large" placeholder="Password">
    </div>
  </div>

  <button class="btn btn-primary" type="submit">Sign in</button>
</form>
